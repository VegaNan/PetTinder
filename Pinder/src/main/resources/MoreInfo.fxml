<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane onKeyPressed="#keyPress" prefHeight="700.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MoreInfoController">
   <children>
      <Pane prefHeight="100.0" prefWidth="450.0">
         <children>
            <Label fx:id="animalNameLabel" alignment="CENTER" layoutX="75.0" layoutY="20.0" prefHeight="60.0" prefWidth="300.0" text="Name" />
            <Button fx:id="backButton" layoutX="10.0" layoutY="25.0" mnemonicParsing="false" onAction="#backAction" prefHeight="15.0" prefWidth="60.0" text="Back" />
         </children> 
      </Pane>
      <ImageView fx:id="animalImage" fitHeight="350.0" fitWidth="350.0" layoutX="50.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true" />
      <Pane layoutY="450.0" prefHeight="100.0" prefWidth="450.0">
         <children>
            <Label fx:id="typeAnimalLabel" layoutX="10.0" layoutY="10.0" prefHeight="80.0" prefWidth="137.0" text="Type of Animal" />
            <Label fx:id="milesAwayLabel" layoutX="157.0" layoutY="10.0" prefHeight="80.0" prefWidth="137.0" text="Miles Away" />
            <Label fx:id="organizationLabel" layoutX="304.0" layoutY="10.0" prefHeight="80.0" prefWidth="137.0" text="Organization" />
         </children>
      </Pane>
      <Button fx:id="leftImage" layoutX="5.0" layoutY="350.0" mnemonicParsing="false" onAction="#leftPicture" prefHeight="30.0" prefWidth="40.0" text="Button" />
      <Button fx:id="rightImage" layoutX="405.0" layoutY="350.0" mnemonicParsing="false" onAction="#rightPicture" prefHeight="30.0" prefWidth="40.0" text="Button" />
      <Pane layoutY="550.0" prefHeight="150.0" prefWidth="450.0">
         <children>
            <Label fx:id="petDescription" layoutX="10.0" layoutY="10.0" prefHeight="130.0" prefWidth="430.0" text="PetDescription" />
         </children>
      </Pane>
   </children>
</AnchorPane>
